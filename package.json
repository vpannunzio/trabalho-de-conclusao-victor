{
  "name": "automation-exercise-tests",
  "version": "1.0.0",
  "description": "Test automation for Automation Exercise website using Selenium WebDriver with JavaScript",
  "main": "index.js",
  "scripts": {
    "test": "mocha test/**/*.js --timeout 60000 --reporter spec",
    "test:single": "mocha test/**/*.js --grep",
    "test:headless": "HEADLESS=true mocha test/**/*.js --timeout 60000 --reporter spec",
    "test:chrome": "BROWSER=chrome mocha test/**/*.js --timeout 60000 --reporter spec",
    "test:firefox": "BROWSER=firefox mocha test/**/*.js --timeout 60000 --reporter spec",
    "test:edge": "BROWSER=edge mocha test/**/*.js --timeout 60000 --reporter spec"
  },
  "keywords": [
    "selenium",
    "webdriver",
    "automation",
    "testing",
    "javascript"
  ],
  "author": "Test Automation Engineer",
  "license": "MIT",
  "dependencies": {
    "chai": "^4.3.10",
    "chromedriver": "latest",
    "edgedriver": "^6.1.2",
    "geckodriver": "latest",
    "mocha": "^10.2.0",
    "selenium-webdriver": "^4.15.0"
  },
  "devDependencies": {
    "audit-ci": "^6.6.1",
    "eslint": "^8.54.0",
    "mocha-junit-reporter": "^2.2.0",
    "mochawesome": "^2.0.5",
    "nyc": "^15.1.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}